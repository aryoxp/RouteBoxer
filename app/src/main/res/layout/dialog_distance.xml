<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    >


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <SeekBar
        android:id="@+id/seekbar_distance"
        android:layout_width="1dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        />

    <TextView
        android:id="@+id/textview_distance"
        android:layout_width="1dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        tools:text="1000 m"
        android:text="1000 m"
        android:textSize="18sp"
        />

</LinearLayout>

    <CheckBox
        android:id="@+id/check_simplify"
        android:actionViewClass="android.widget.checkbox"
        android:showAsAction="always"
        android:text="@string/action_simplify"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/check_runboth"
        android:actionViewClass="android.widget.checkbox"
        android:showAsAction="always"
        android:text="@string/action_runboth"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>